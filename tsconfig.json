{
    "compilerOptions": {
        "lib": ["ESNext"],
        "types": ["node", "express"],
        "typeRoots": ["./node_modules/@types"],
        "resolveJsonModule": true,
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "vendor/*"],
            "src/*": ["./src/*", "types/*"],
            "http": ["customtypings/express.d.ts"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6"
    },
    "exclude": ["clients", "dist/**/*"],
    "ts-node": {
        "esm": true
    }
}
